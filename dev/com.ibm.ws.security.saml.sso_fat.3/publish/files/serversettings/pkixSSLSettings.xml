<server>
	<sslDefault sslRef="pkixSSLConfig" />
	<ssl
		id="pkixSSLConfig"
		keyStoreRef="allKeyStore"
		trustStoreRef="serverStoreShibboleth"
		clientAuthenticationSupported="true" />
	<keyStore
		id="allKeyStore"
		password="Liberty"
		type="PKCS12"
		location="${server.config.dir}/key.p12" />
	<keyStore
		id="samlKeyStore"
		password="Liberty"
		type="PKCS12"
		location="${server.config.dir}/samlKey.p12" />
	<keyStore
		id="serverStoreNoTfim"
		password="LibertyServer"
		type="PKCS12"
		location="${server.config.dir}/sslServerTrust.p12" />
	<keyStore
		id="samlPrivKeyStore"
		password="Liberty"
		type="JKS"
		location="${server.config.dir}/samlKeyPrivPass.jks" />
	<keyStore
		id="serverStoreTfim"
		password="LibertyServer"
		type="PKCS12"
		location="${server.config.dir}/sslServerTrustTfim.p12" />

	<keyStore
		id="serverStoreShibboleth"
		password="LibertyServer"
		type="PKCS12"
		location="${server.config.dir}/sslServerTrustShibboleth.p12" />

</server>
