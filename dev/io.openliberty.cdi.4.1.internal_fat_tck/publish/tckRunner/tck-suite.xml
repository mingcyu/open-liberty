<!-- Adapted from https://github.com/jakartaee/cdi-tck/blob/4.1.0/impl/src/main/resources/tck-tests.xml -->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="CDI TCK" verbose="2" configfailurepolicy="continue">

    <listeners>
        <!-- Required - avoid randomly mixed test method execution -->
        <listener class-name="org.jboss.cdi.tck.impl.testng.SingleTestClassMethodInterceptor" />
    </listeners>

    <test name="CDI TCK">
        <packages>
            <package name="org.jboss.cdi.tck.tests.*" />
            <package name="org.jboss.cdi.tck.interceptors.tests.*" />
<!--            <package name="org.jboss.cdi.tck.tests.full.decorators.definition" />-->
<!--            <package name="org.jboss.cdi.tck.tests.definition.bean" />-->
<!--            <package name="org.jboss.cdi.tck.tests.event" />-->
<!--            <package name="org.jboss.cdi.tck.tests.event.implicit" />-->
<!--            <package name="org.jboss.cdi.tck.tests.full.deployment.exclude" />-->
        </packages>

        <classes>
            <!-- https://github.com/jakartaee/cdi-tck/issues/440 -->
            <class name="org.jboss.cdi.tck.tests.full.extensions.lifecycle.processBeanAttributes.specialization.VetoTest">
                <methods>
                    <exclude name=".*"/>
                </methods>
            </class>
        </classes>

    </test>
</suite>
