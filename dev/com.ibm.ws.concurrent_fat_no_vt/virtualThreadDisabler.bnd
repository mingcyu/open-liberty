-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: Virtual thread disabler
Bundle-SymbolicName: test.concurrent.no.vt.disabler
Bundle-Description: Simulates a stack product that instructs Liberty to never create virtual threads.

Private-Package: test.concurrent.no.vt.disabler.*

Service-Component: \
  test.concurrent.no.vt.disabler;\
    implementation:=test.concurrent.no.vt.disabler.VirtualThreadDisabler;\
    provide:='com.ibm.wsspi.threading.ThreadTypeOverride';\
    configuration-policy:=ignore
