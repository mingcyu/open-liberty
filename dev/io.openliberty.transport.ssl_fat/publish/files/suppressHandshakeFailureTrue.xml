<server description="FAT for channel SSL - suppress messages true">

    <include location="../fatTestCommon.xml"/>

    <featureManager>
        <feature>servlet-3.1</feature>
        <feature>appSecurity-2.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
          host="localhost"
          httpPort="${bvt.prop.HTTP_default}"
          httpsPort="${bvt.prop.HTTP_default.secure}" >
          <tcpOptions portOpenRetries="60"/>
	</httpEndpoint>

    <!-- The keystore DELIBERATELY does not have a personal certificate -->
    <keyStore id="defaultKeyStore" password="Liberty"/>

    <sslOptions id="defaultSSLOptions" suppressHandshakeErrors="true" />

    <application type="war" id="basicauth" name="basicauth"
	             location="${server.config.dir}/apps/basicauth.war" />

</server>
