<server>
	<sslDefault sslRef="goodSSLConfig" />
	<ssl
		id="goodSSLConfig"
		keyStoreRef="samlKeyStore"
		trustStoreRef="serverStore"
		clientAuthenticationSupported="true" />
	<keyStore
		id="allKeyStore"
		password="Liberty"
		type="PKCS12"
		location="${server.config.dir}/key.p12" />
	<keyStore
		id="samlKeyStore"
		password="Liberty"
		type="PKCS12"
		location="${server.config.dir}/samlspKeyStore.p12"
		serverKeyAlias="samlsp"
		clientKeyAlias="samlsp" />
	<keyStore
		id="serverStore"
		password="LibertyServer"
		type="PKCS12"
		location="${server.config.dir}/samlSslServerTrust.p12" />

</server>