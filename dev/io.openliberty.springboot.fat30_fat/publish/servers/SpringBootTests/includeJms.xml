<server description="Spring JMS Test Configuration">
	<resourceAdapter id="mqJms" location="${shared.resource.dir}/mq/wmq.jakarta.jmsra.rar" />
	<jmsQueueConnectionFactory jndiName="jms/XA_CF1" resourceAdapterRef="mqJms">
    	<properties.mqJms
        	transportType="CLIENT"
        	hostName="${mq_host}"
        	port="${mq_port}"
        	channel="DEV.ADMIN.SVRCONN"
        	queueManager="QM1"
        	username="admin"
        	password="passw0rd"/>
	</jmsQueueConnectionFactory>
	
	<jmsQueue id="Q1" jndiName="jms/Q1">
    	<properties.mqJms 
        	baseQueueName="Q1"
        	baseQueueManagerName="QM1"/>
    </jmsQueue>
    
    <library id="DerbyLib">
        <file name="${shared.resource.dir}/derby/derby.jar"/>
    </library>
    <dataSource jndiName="jdbc/DerbyDS1" type="javax.sql.XADataSource" id="DerbyDS1">
        <jdbcDriver libraryRef="DerbyLib"/>
        <properties.derby.embedded createDatabase="create" databaseName="memory:myDB1"/>
    </dataSource>
    <dataSource jndiName="jdbc/DerbyDS2" type="javax.sql.XADataSource" id="DerbyDS2">
        <jdbcDriver libraryRef="DerbyLib"/>
        <properties.derby.embedded createDatabase="create" databaseName="memory:myDB2"/>
    </dataSource>
</server>
