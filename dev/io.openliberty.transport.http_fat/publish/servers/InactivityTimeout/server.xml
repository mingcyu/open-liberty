<server description="Test tcpOptions inactivityTimeout configuration.">

    <include location="../fatTestCommon.xml"/>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="${bvt.prop.HTTP_default}"
                  httpsPort="${bvt.prop.HTTP_default.secure}">
        <tcpOptions portOpenRetries="60"/>
        <!--  Set the readTimeout, and writeTimeout to 0 to force the the use of the inactivtyTimeout. -->
        <httpOptions readTimeout="0" writeTimeout="0"/>
    </httpEndpoint>

    <featureManager>
        <feature>servlet-3.1</feature>
    </featureManager>

</server>
