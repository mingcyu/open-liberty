-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-SymbolicName: com.ibm.websphere.javaee.jsonp.1.0


# Optionally import glassfish RI because spec jar does Class.forName() of it as a fallback option
Import-Package: \
   org.glassfish.json;resolution:=optional, \
   *

Export-Package: \
   javax.json;thread-context=true, \
   javax.json.spi, \
   javax.json.stream

instrument.disabled: true

publish.wlp.jar.suffix: dev/api/spec

#FIXME why import API from glassfish jar? why not directly from javax.json:javax.json-api?
-buildpath: \
	org.glassfish:javax.json;version=1.0.5.ibm
