<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">

  <enterprise-beans>
    <session>
      <ejb-name>RestartStartupSingletonWarBean</ejb-name>
      <env-entry>
        <env-entry-name>ThrowExceptionOnStart</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
        <injection-target>
          <injection-target-class>test.ejbcontainer.restart.singleton.web.RestartStartupSingletonWarBean</injection-target-class>
          <injection-target-name>throwExceptionOnStart</injection-target-name>
        </injection-target>
      </env-entry>
    </session>

  </enterprise-beans>

</ejb-jar>
