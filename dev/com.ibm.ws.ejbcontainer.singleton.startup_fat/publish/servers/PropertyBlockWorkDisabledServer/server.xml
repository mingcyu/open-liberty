<server>
    <featureManager>
        <feature>servlet-3.1</feature>
        <feature>ejbRemote-3.2</feature>
        <feature>ejbHome-3.2</feature>
        <feature>componenttest-1.0</feature>
    </featureManager>

    <include location="../fatTestPorts.xml"/>

    <webContainer deferServletLoad="false"/>

    <iiopEndpoint id="defaultIiopEndpoint" iiopPort="${bvt.prop.IIOP}" iiopsPort="${bvt.prop.IIOP.secure}"/>

    <library id="SingletonPropertyShared">
        <file name="${server.config.dir}/lib/SingletonPropertyIntf.jar"/>
    </library>

    <application id="SingletonPropertyStartup" location="SingletonPropertyStartup.ear">
        <classloader commonLibraryRef="SingletonPropertyShared"/>
    </application>

    <!-- TODO : com.ibm.websphere.ejbcontainer.blockWorkUntilAppStarted not supported on Liberty
    <application id="SingletonPropertyNoStartup" location="SingletonPropertyNoStartup.ear">
        <classloader commonLibraryRef="SingletonPropertyShared"/>
    </application>
     -->

    <application id="SingletonPropertyTest" location="SingletonPropertyTest.war">
        <classloader commonLibraryRef="SingletonPropertyShared"/>
    </application>

</server>
