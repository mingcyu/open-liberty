<server>
    <featureManager>
        <feature>jaxrs-2.1</feature>
        <feature>ssl-1.0</feature>
        <feature>timedexit-1.0</feature>
        <feature>servlet-4.0</feature>
        <feature>openidconnectclient-1.0</feature>
        <feature>jsp-2.3</feature>
    </featureManager>

    <authFilter id="myAuthFilter">
        <requestUrl id="myRequestUrl" matchType="contains" urlPattern="/SimpleServlet"/>
    </authFilter>
    <openidConnectClient authFilterRef="myAuthFilter" authorizationEndpointUrl="http://localhost:${bvt.prop.security_1_HTTP_default}/oidc/endpoint/OidcConfigSample/authorize" clientId="client01" clientSecret="{xor}LDo8LTorbm1saw==" httpsRequired="false" id="client01" mapIdentityToRegistryUser="true" redirectToRPHostAndPort="http://localhost:${bvt.prop.security_2_HTTP_default}" scope="openid profile" sharedKey="secret1234" tokenEndpointUrl="http://localhost:${bvt.prop.security_1_HTTP_default}/oidc/endpoint/OidcConfigSample/token" userInfoEndpointEnabled="true" userInfoEndpointUrl="http://localhost:${bvt.prop.security_1_HTTP_default}/oidc/endpoint/OidcConfigSample/userinfo"/>


    <basicRegistry id="basic" realm="BasicRealm">
        <user name="utle" password="utlepwd"/>
        <user name="testuser" password="testuserpwd"/>
    </basicRegistry>
    
    <sslDefault sslRef="DefaultSSLSettings"/>
    <ssl clientAuthenticationSupported="true" id="DefaultSSLSettings" keyStoreRef="myKeyStore" trustStoreRef="myTrustStore"/>
    <keyStore id="myKeyStore" location="${server.config.dir}/commonBasicKeyStore.jks" password="Liberty" type="jks"/>
    <keyStore id="myTrustStore" location="${server.config.dir}/commonTrustStore.jks" password="Liberty" type="jks"/>
    <SSLDefault sslRef="DefaultSSLSettings"/>

    <application id="formlogin" location="${server.config.dir}/test-apps/formlogin.war" name="formlogin" type="war">
        <application-bnd>
            <security-role name="Employee">
                <special-subject type="ALL_AUTHENTICATED_USERS"/>
            </security-role>
            <security-role name="Manager">
                <special-subject type="ALL_AUTHENTICATED_USERS"/>
            </security-role>
            <security-role name="AllAuthenticated">
                <special-subject type="ALL_AUTHENTICATED_USERS"/>
            </security-role>
        </application-bnd>
    </application>


    <httpEndpoint host="*" httpPort="${bvt.prop.security_2_HTTP_default}" httpsPort="${bvt.prop.security_2_HTTP_default.secure}" id="defaultHttpEndpoint">
        <tcpOptions soReuseAddr="true"/>
    </httpEndpoint>

    </server>
