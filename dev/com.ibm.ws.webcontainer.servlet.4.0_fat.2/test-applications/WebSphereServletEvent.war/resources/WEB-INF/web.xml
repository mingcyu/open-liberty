<web-app
   version="4.0"
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

   <display-name>WebSphereServletEvent</display-name>

	<!-- Filters order is important in this test!
		EventErrorFilter will throw Exception AFTER chain.doFilter()
		EventFilter will handle it in order for the response to return correctly. -->
   <filter>
      <filter-name>EventFilter</filter-name>
      <filter-class>websphere.filter.EventFilter</filter-class>
   </filter>

   <filter>
      <filter-name>EventErrorFilter</filter-name>
      <filter-class>websphere.filter.EventErrorFilter</filter-class>
   </filter>

   <filter-mapping>
      <filter-name>EventFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>

   <filter-mapping>
      <filter-name>EventErrorFilter</filter-name>
      <url-pattern>/FilterErrorEvent</url-pattern>
   </filter-mapping>

   <!-- @WebListener can also be used-->
   <listener>
      <listener-class>websphere.listener.StandardServletContextListener</listener-class>
   </listener>

</web-app>
