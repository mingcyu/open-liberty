<server description="Telemetry Server to test audit file handler event filtering.">
	<featureManager>
		<feature>audit-1.0</feature>
		<feature>mpTelemetry-2.0</feature>
		<feature>componentTest-2.0</feature>
		<feature>servlet-6.1</feature>
		<feature>appSecurity-6.0</feature>
	</featureManager>
	
	<mpTelemetry source="audit"/>
	
	<include location="../fatTestPorts.xml"/>
	<application location="MpTelemetryLogApp.war"/>
	
	<auditFileHandler maxFiles="5" maxFileSize="20" compact="true">
		<events name="AuditEvent_1" eventName="SECURITY_AUDIT_MGMT" outcome="SUCCESS"/>
	</auditFileHandler>
	<include location="serverSessionConfig.xml"/>
</server>